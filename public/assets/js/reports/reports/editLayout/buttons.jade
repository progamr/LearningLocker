a#save.btn.btn-primary()
  i.icon.icon-save
  != " <%= trans('site.save') %>"
= '\n'
a#graph(href!='#<%= _id %>/graph' data-toggle="tooltip" data-placement="top" title="View a graph of statements that match this report").btn.btn-success
  i.icon.icon-signal
  != " <%= trans('reporting.graph') %>"
= '\n'
a#statements(href!='reporting/<%= _id %>/statements' data-toggle="tooltip" data-placement="top" title="View a list of statements that match this report").btn.btn-success
  i.icon.icon-eye-open
  != " <%= trans('statements.statements') %>"
= '\n'
a#cancel(href!='#' data-toggle="tooltip" data-placement="top" title="Go back to view reports without saving").btn.btn-danger
  i.icon.icon-remove
  != " <%= trans('site.cancel') %>"
